modules = ["web", "php-8.2"][nix]
channel = "stable-25_05"

[workflows]
runButton = "PHP Server"

[[workflows.workflow]]
name = "PHP Server"
author = "agent"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -S 0.0.0.0:3000 -t ."

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80
